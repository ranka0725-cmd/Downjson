{                                                                                       // ── manifest.json START ──
  "manifest_version": 3,                                                                // MV3 선언 (필수)
  "name": "Downloader JSONL (Manual Saver)",                                            // 확장 프로그램 이름
  "version": "0.1.0",                                                                   // 확장 버전
  "description": "JSONL+TXT+Images 저장 / 아이콘 클릭으로 패널 열기 / 4±2초 지연",     // 설명문
  "action": {                                                                           // 툴바 아이콘 동작 설정
    "default_title": "Downloader Panel"                                                 // 아이콘에 마우스 오버 시 툴팁
  },                                                                                    //
  "permissions": [                                                                      // 일반 권한
    "storage",                                                                          // chrome.storage 사용
    "scripting",                                                                        // (필요 시) 프로그램적 스크립트 주입
    "activeTab"                                                                         // 현재 탭 접근 권한
  ],                                                                                    //
  "host_permissions": [                                                                 // 컨텐츠 접근 가능한 호스트
    "<all_urls>"                                                                        // 모든 URL 허용(수집 도구 특성 상 필요)
  ],                                                                                    //
  "background": {                                                                       // 백그라운드(Service Worker)
    "service_worker": "bg.js"                                                           // 실행 파일 지정
  },                                                                                    //
  "content_scripts": [                                                                  // 콘텐츠 스크립트 등록
    {                                                                                   // 개별 항목
      "matches": ["<all_urls>"],                                                        // 모든 페이지에서 로드
      "js": ["content.js"],                                                             // 로드할 스크립트
      "run_at": "document_idle"                                                         // DOM 준비 이후 실행
    }                                                                                   //
  ]                                                                                     //
}                                                                                       // ── manifest.json END ──
