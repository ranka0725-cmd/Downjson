{
  "manifest_version": 3,
  "name": "Downjson - Selector & Text Grabber",
  "version": "0.1.1",
  "description": "요소 선택자/텍스트 추출, 도메인별 저장, 아이콘/단축키로 패널 토글 (Shadow DOM)",
  "permissions": ["storage", "activeTab", "scripting", "clipboardWrite"],
  "host_permissions": ["<all_urls>"],
  "background": { "service_worker": "bg.js" },
  "action": { "default_title": "Downjson 패널 토글" },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "commands": {
    "toggle-panel": {
      "suggested_key": { "default": "Alt+Shift+X" },
      "description": "Downjson 패널 열기/닫기"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["lib/*"],
      "matches": ["<all_urls>"]
    }
  ]
}